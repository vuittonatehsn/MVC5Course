@model IEnumerable<MVC5Course.Models.Client>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>


    @using (Html.BeginForm("Index", "會員", FormMethod.Get))
    {
    <p>
        搜尋: @Html.DropDownList("rateList", "選擇信用等級")
